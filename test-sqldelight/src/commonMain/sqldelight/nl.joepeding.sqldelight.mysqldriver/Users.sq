insertAndGet:
INSERT INTO users(email, username, bio, image, fooID)
VALUES (?, ?, ?, ?, ?);

selectByUsername:
SELECT email, username, bio, image
FROM users
WHERE username = :username;

selectByFoo:
SELECT * FROM users WHERE fooID = :fooID;

