libraryPaths.macos_x64 = /opt/homebrew/opt/mysql@8.1/lib /usr/local/opt/mysql/lib /opt/homebrew/opt/zstd/lib /usr/local/opt/zstd/lib /opt/homebrew/opt/zlib/lib /usr/local/opt/zlib/lib
